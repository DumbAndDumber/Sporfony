{% extends 'base.html.twig' %}

{% block body %}
    <h1>Slot</h1>

    <table>
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ slot.id }}</td>
            </tr>
            <tr>
                <th>Starttime</th>
                <td>{% if slot.startTime %}{{ slot.startTime|date('H:i:s') }}{% endif %}</td>
            </tr>
        </tbody>
    </table>

    <ul>
        <li>
            <a href="{{ path('slot_index') }}">Back to the list</a>
        </li>
        <li>
            <a href="{{ path('slot_edit', { 'id': slot.id }) }}">Edit</a>
        </li>
        <li>
            {{ form_start(delete_form) }}
                <input type="submit" value="Delete">
            {{ form_end(delete_form) }}
        </li>
    </ul>
{% endblock %}
