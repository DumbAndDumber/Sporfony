{% extends 'base.html.twig' %}

{% block body %}
    <h1>Lesson</h1>

    <table>
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ lesson.id }}</td>
            </tr>
            <tr>
                <th>Name</th>
                <td>{{ lesson.name }}</td>
            </tr>
            <tr>
                <th>Recurrence</th>
                <td>{{ lesson.recurrence }}</td>
            </tr>
            <tr>
                <th>Date</th>
                <td>{% if lesson.date %}{{ lesson.date|date('Y-m-d') }}{% endif %}</td>
            </tr>
        </tbody>
    </table>

    <ul>
        <li>
            <a href="{{ path('lesson_index') }}">Back to the list</a>
        </li>
        <li>
            <a href="{{ path('lesson_edit', { 'id': lesson.id }) }}">Edit</a>
        </li>
        <li>
            {{ form_start(delete_form) }}
                <input type="submit" value="Delete">
            {{ form_end(delete_form) }}
        </li>
    </ul>
{% endblock %}
